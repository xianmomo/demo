<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    					http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 引入属性文件 -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:config.properties</value>
				<value>classpath:jdbc.properties</value>
			</list>
		</property>
	</bean>

	<bean id="casUserDao" class="com.sf.itmro.cas.dao.impl.ICASUserDaoImpl" />
	<bean id="springContextUtil" class="com.sf.itmro.base.utils.SpringContextUtil" />

	<!-- 自动扫描(依赖注入) -->
	<context:component-scan base-package="com.sf.itmro.*.dao" />
	<context:component-scan base-package="com.sf.itmro.*.service" />
	<context:component-scan base-package="com.sf.itmro.*.module" />

	<!-- 导入xml文件 -->
	<import resource="classpath:quartz-inf/scheduleJob.xml" />
	<import resource="classpath:ecp-inf/ecp-config.xml" />
	<import resource="classpath:email-inf/email-config.xml" />
	<import resource="classpath:wbsap-inf/wbsap-config.xml" />
	<import resource="classpath:svn-inf/svn-config.xml" />
	<import resource="classpath:git-inf/git-config.xml" />
	<import resource="classpath*:jira-inf/jira-config.xml" />
</beans>