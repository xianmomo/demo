				create_time,
			</if>
			<if test="modifyTime != null">
				modify_time,
			</if>
			<if test="remark != null">
				remark,
			</if>
			<if test="orgCode != null">
				org_code,
			</if>
			<if test="orgName != null">
				org_name,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
