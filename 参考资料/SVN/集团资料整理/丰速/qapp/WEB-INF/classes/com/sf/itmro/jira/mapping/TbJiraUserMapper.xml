	<insert id="insertByHcmOutEmp" parameterType="java.lang.String">
		insert into tb_jira_user(
		user_id,user_name,user_alias,user_email,user_type,date_num,org_code,org_name
		) select
		replace(uuid(),'-',''),t.emp_num,t.last_name,t.mail_address,case t.persg_txt when "业务外包" then '1' else '0' end,
		case t.persg_txt when "业务外包" then 180 else 730 end,t.curr_org_id,t.curr_org_name
		from HCM_OUT_EMP t
		where t.emp_num=#{userName,jdbcType=VARCHAR};
	</insert>
